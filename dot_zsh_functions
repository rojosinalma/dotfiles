# Kubectl exec
function kex(){
  kubectl exec -it $1 -- sh -c "clear; (bash || ash || sh)"
}

# FZF-TMUX
fzf-tmux() {
  command fzf-tmux $FZF_TMUX_OPTS
}

# Nala (and sudo)
apt() { 
  command nala "$@"
}

sudo() {
  if [ "$1" = "apt" ]; then
    shift
    command sudo nala "$@"
  else
    command sudo "$@"
  fi
}

# cht.sh

cht() {
  command curl cht.sh "$@"
}
