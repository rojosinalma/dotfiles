# Base from: https://github.com/kkga/dotfiles/blob/master/.config/yabai/yabairc

# Quick restart
cmd + ctrl + shift - q : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
cmd + ctrl + shift - w : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.skhd"

# APPS
# cmd + ctrl - t : kitty -d=$HOME --single-instance --listen-on=unix:/tmp/mykitty

# WINDOWS

# navigate windows and spaces
alt - k : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus first
alt - j : yabai -m window --focus stack.prev || yabai -m window --focus prev || yabai -m window --focus last

# move window
alt + shift - j: yabai -m window --warp prev
alt + shift - k: yabai -m window --warp next

# balance size of windows
alt + shift - backspace : yabai -m space --balance

# resize windows
cmd + ctrl - h : yabai -m window --resize left:-60:0
cmd + ctrl - l : yabai -m window --resize right:60:0

# mirror tree x-axis
alt + shift - v : yabai -m space --mirror y-axis


# float / unfloat window and center on screen
alt + shift - t : yabai -m window --toggle float;\
                  yabai -m window --grid 8:8:1:1:6:6

# TOGGLES
alt - p : yabai -m window --toggle border
alt - g : yabai -m space --toggle gap

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
alt + shift - space : yabai -m window --toggle split


# SPACES
# fast focus desktop
alt - n : yabai -m space  --focus next
alt - m : yabai -m space  --focus prev
cmd + ctrl - tab : yabai -m space --focus recent
# alt - 1 : yabai -m space --focus 1
# alt - 2 : yabai -m space --focus 2
# alt - 3 : yabai -m space --focus 3
# alt - 4 : yabai -m space --focus 4
# alt - 5 : yabai -m space --focus 5
# alt - 6 : yabai -m space --focus 6
# alt - 7 : yabai -m space --focus 7
# alt - 8 : yabai -m space --focus 8
# alt - 9 : yabai -m space --focus 9

